{
  "extends": "airbnb",
  "plugins": [
    "standard",
    "promise"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true
      }],
    "promise/always-return": "error",
    "quotes": ["error", "single"],
    "arrow-body-style": [0, "as-needed"]
  },
  "globals": {
    "describe": true,
    "it": true,
    "expect": true,
    "app": true,
    "td": true,
    "beforeEach": true,
    "request": true,
    "Joi": true,
    "joiAssert": true,
    "db": true,
    "logger": true,
    "responses": true
  }
}
