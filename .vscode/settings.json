{
    "editor.fontSize": 16,
    "workbench.colorTheme": "Default Dark+",
    "window.zoomLevel": 0.3,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
    },
    "editor.minimap.enabled": false,
    "search.exclude": {
    "**/node_modules": true,
    "**/public/bower_components": true
    },
    // ctrl + shift + h
    "relativePath.ignore": [
        "**/node_modules/**",
        "**/*.dll",
        "**/obj/**",
        "**/objd/**"
    ],
    "gitblame.statusBarMessageFormat": "${author.name} ( ${time.ago} )",
      "workbench.iconTheme": "vscode-icons" // file-icons
}