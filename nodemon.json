{
  "restartable": "rs",
  "ignore": [
    ".git",
   "node_modules/**/node_modules",
   "scripts/**",
   "public/bower_components/**",
   "gulpfile.js",
   "docs/"
 ],
 "events": {
    "restart": ""
  },
  "watch": [
    "app.js",
    "app_api/**",
    "server.js",
    "app_api_v2/**",
    "app_realtime/**",
    "app_client/routes.client.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
