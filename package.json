{
  "name": "espol-ppl",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "npm run npm-scripts-info",
    "dev": "npm-run-all --parallel server sync",
    "debug:node": "cross-env NODE_ENV=debug env-cmd .env node --expose-gc --inspect=9222 app.js",
    "server": "cross-env NODE_ENV=development env-cmd .env nodemon server.js --config nodemon.json",
    "server:test": "cross-env NODE_ENV=testing PORT=8001 env-cmd .env nodemon server.js --config nodemon.json",
    "api:server": "cross-env NODE_ENV=development env-cmd .env nodemon app_api/server.api.js --config nodemon.json",
    "client:server": "cross-env NODE_ENV=development env-cmd .env node app_client/server.client.js",
    "client:server:cas": "cross-env NODE_ENV=cas env-cmd .env node app_client/server.client.js",
    "migrate:rollback": "cross-env NODE_ENV=development env-cmd .env  knex migrate:rollback --knexfile  app_api/db/development/knexfile.js",
    "migrate:latest": "cross-env NODE_ENV=development env-cmd .env  knex migrate:latest --knexfile  app_api/db/knexfile.js",
    "migrate:latest:testing": "cross-env NODE_ENV=testing env-cmd .env  knex migrate:latest --knexfile  app_api/db/knexfile.js",
    "seed:run": "cross-env NODE_ENV=development env-cmd .env  knex seed:run --knexfile  app_api/db/knexfile.js",
    "seed:run:testing": "cross-env NODE_ENV=testing env-cmd .env knex seed:run --knexfile  app_api/db/knexfile.js",
    "predevelopment": "cross-env NODE_ENV=development env-cmd .env node scripts/database/setup_database_mysql.js",
    "development": "npm-run-all migrate:latest seed:run",
    "pretest": "cross-env NODE_ENV=testing env-cmd .env node scripts/database/setup_database_mysql.js",
    "test": "npm-run-all migrate:latest:testing seed:run:testing test:integration",
    "test:integration": "cross-env NODE_ENV=testing env-cmd .env ava app_api/test/integration/**/*.test.js --verbose --color ",
    "sync": "browser-sync start --proxy 'http://localhost:8000' --ws --port 5000 --no-open --no-ui",
    "docs:api": "node node_modules/apidoc/bin/apidoc -e docs/ -i app_api/routes -o docs/api",
    "predocs:code": "gitbook install ./docs/code",
    "docs:code": "gitbook build ./docs/code",
    "docs:code:s": "gitbook serve ./docs/code",
    "docs": "npm-run-all docs:api docs:code",
    "npm-scripts-info": "npm-scripts-info",
    "browser-sync": "browser-sync"
  },
  "ava": {
    "source": [
      "app_api/*.{js,jsx}"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": false,
    "powerAssert": false
  },
   "scripts-info": {
    "start": "Ver informacion de los scripts",
    "development": "Crea la base de datos development (borra la existente)",
    "dev": "Empieza la aplicacion",
    "debug:node": "Habilita el modo debug para chrome",
    "cas": "Para realizar pruebas del cas",
    "test": "Corre los test automaticos",
    "docs": "Genera la documentacion, /docs/api y /docs/code",
    "migrate:latest": "Correr las migraciones en development",
    "seed:run": "Corre los seed en development"
  },
  "dependencies": {
    "body-parser": "~1.16.0",
    "cas-authentication": "^0.0.8",
    "co": "^4.6.0",
    "connect-mongo": "^2.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.15.5",
    "express-session": "^1.15.6",
    "knex": "^0.13.0",
    "mongodb": "^2.2.33",
    "morgan": "^1.9.0",
    "mysql": "^2.15.0",
    "winston": "^3.0.0-rc0"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "ava": "^0.22.0",
    "chalk": "^2.2.0",
    "browser-sync": "^2.18.13",
    "cross-env": "^2.0.0",
    "env-cmd": "^7.0.0",
    "faker": "^4.1.0",
    "gitbook-cli": "^2.3.2",
    "leakage": "^0.3.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.1",
    "npm-scripts-info": "^0.3.6",
    "sinon": "^4.0.1",
    "supertest": "^3.0.0"
  }
}
